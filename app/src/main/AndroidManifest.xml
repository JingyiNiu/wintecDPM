<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wintec.degreemap">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_degree_mapper"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_degree_mapper"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.shared.TutorialPart2"></activity>
        <activity android:name=".ui.shared.TutorialPart1" />
        <activity android:name=".ui.student.student_profile.StudentProfile_ContactDetail" />
        <activity android:name=".ui.student.student_profile.StudentProfile_Developers" />
        <activity android:name=".ui.student.student_profile.StudentProfile_AboutUs" />
        <activity android:name=".ui.manager.manage_students.ManageStudentsHome" />
        <activity android:name=".ui.manager.manage_courses.ManagerCourseHomeFragment" />
        <activity android:name=".ui.manager.ManagerLogin" />
        <activity
            android:name=".ui.manager.ManagerHome"
            android:label="Manager"
            android:parentActivityName=".ui.shared.RoleSelectionActivity" />
        <activity
            android:name=".ui.student.StudentHome"
            android:label="Student"
            android:parentActivityName=".ui.shared.RoleSelectionActivity" />
        <activity android:name=".ui.shared.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.shared.RoleSelectionActivity"
            android:label="Role Selection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>