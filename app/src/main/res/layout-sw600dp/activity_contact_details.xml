<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.student.student_profile.StudentProfile_AboutUs"
    android:background="@color/backgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="My Details"
                android:textColor="@color/black"
                android:textSize="40sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="Record your details"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15sp"/>

                <!-- Avatar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Profile Image"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/details_avatar"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_profile_edit_image"/>

                <!-- ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/details_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:textSize="24sp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- First Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/details_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:textSize="24sp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- Last Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/details_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:textSize="24sp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- Phone Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/details_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:textSize="24sp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/details_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:textSize="24sp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/details_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:textSize="24sp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- Gender -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>

                <CheckBox android:id="@+id/checkbox_nothing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prefer not to say"
                    android:textSize="28sp"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="28sp"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="28sp"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_diverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender diverse"
                    android:textSize="28sp"
                    android:onClick="onCheckboxClicked"
                    android:layout_marginBottom="60dp"/>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="40dp">
                    <Button
                        android:id="@+id/btn_details_save"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:text="Save"
                        android:padding="20dp"
                        android:textSize="28sp"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_wintec_yellow"
                        android:fontFamily="@font/source_sans_pro"/>
                    <Button
                        android:onClick="jumpTo"
                        android:id="@+id/btn_details_cancel"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:textSize="28sp"
                        android:padding="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Cancel"
                        android:textColor="#fff"
                        android:background="@drawable/btn_wintec_black"
                        android:fontFamily="@font/source_sans_pro"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>