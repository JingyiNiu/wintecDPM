<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.manager.ManagerHomeOptions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back_arrow"
            android:onClick="navigateTo"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginLeft="20dp"
            app:tint="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dashboard"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Kia Ora!"
        android:textColor="@color/gray"
        android:textSize="42sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Let's get started"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/manage_courses"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="30dp"
        android:layout_width="500dp"
        android:layout_height="320dp"
        android:layout_margin="16dp"
        android:onClick="navigateTo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    app:tint="@color/black"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_circle_white"
                    android:padding="30dp"
                    android:src="@drawable/ic_courses" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/source_sans_pro"
                    android:text="Manage Courses"
                    android:textAlignment="center"
                    android:textColor="@color/lightGray"
                    android:textSize="38sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                app:tint="#fff"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_circle_black_transparent"
                android:padding="24dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/manage_students"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="30dp"
        android:layout_width="500dp"
        android:layout_height="320dp"
        android:layout_margin="16dp"
        android:onClick="navigateTo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    app:tint="@color/black"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_circle_white"
                    android:padding="30dp"
                    android:src="@drawable/ic_school" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textAlignment="center"
                    android:textColor="@color/lightGray"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:text="Manage Students"/>

            </LinearLayout>

            <ImageView
                app:tint="#fff"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_circle_black_transparent"
                android:padding="24dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>