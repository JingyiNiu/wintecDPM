<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.shared.RoleSelectionActivity"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wintec_logo"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/logo_wintec" />

        <ImageView
            android:id="@+id/role_selection"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_below="@+id/wintec_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_select_role" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/role_selection"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="Please Select"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="42sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_student"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_wintec_yellow"
        android:fontFamily="@font/source_sans_pro_bold"
        android:onClick="jumpTo"
        android:text="Student"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="38sp" />

    <Button
        android:id="@+id/btn_manager"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_wintec_yellow"
        android:fontFamily="@font/source_sans_pro_bold"
        android:onClick="jumpTo"
        android:text="Manager"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="38sp" />

</LinearLayout>
