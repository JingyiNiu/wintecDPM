<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back_arrow"
            android:onClick="navigateTo"
            android:layout_width="34dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Dashboard"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kia Ora!"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="42sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_centerInParent="true"
        android:textColor="@color/gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Pathway"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="34sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"/>

    <!-- network and web -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:clipToPadding="false">

        <!-- network -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_network"
            android:layout_width="250dp"
            android:layout_height="320dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/purple">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:background="@drawable/bg_circle_white"
                    android:src="@drawable/ic_pathway_network" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="24dp"
                    android:text="Network\nEngineering"
                    android:fontFamily="@font/source_sans_pro"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGray"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- web -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_web"
            android:layout_width="250dp"
            android:layout_height="320dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/red">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:background="@drawable/bg_circle_white"
                    android:src="@drawable/ic_pathway_web" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="24dp"
                    android:text="Web\nDevelopment"
                    android:fontFamily="@font/source_sans_pro"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGray"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- database and software -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false">
        <!-- database -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_database"
            android:layout_width="250dp"
            android:layout_height="320dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/green">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:background="@drawable/bg_circle_white"
                    android:src="@drawable/ic_pathway_database"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="24dp"
                    android:text="Database\nArchitecture"
                    android:fontFamily="@font/source_sans_pro"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGray"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- software -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_software"
            android:layout_width="250dp"
            android:layout_height="320dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:background="@drawable/bg_circle_white"
                    android:src="@drawable/ic_pathway_software" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="24dp"
                    android:text="Software\nEngineering"
                    android:fontFamily="@font/source_sans_pro"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGray"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>