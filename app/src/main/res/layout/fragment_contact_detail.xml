<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:padding="16dp"
                    android:text="My Details"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Record your details"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"/>

                    <!-- Avatar -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="Profile Image"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/details_avatar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icon_profile_edit_image" />

                    <!-- ID -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="ID"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/details_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_with_border"
                        android:fontFamily="@font/source_sans_pro"
                        android:padding="6dp" />

                    <!-- First Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="First Name"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/details_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_with_border"
                        android:fontFamily="@font/source_sans_pro"
                        android:padding="6dp"
                        android:textSize="16sp" />

                    <!-- Last Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="Last Name"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/details_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_with_border"
                        android:fontFamily="@font/source_sans_pro"
                        android:padding="6dp" />

                    <!-- Phone Number -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="Phone Number"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/details_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_with_border"
                        android:fontFamily="@font/source_sans_pro"
                        android:padding="6dp" />

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/details_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_with_border"
                        android:fontFamily="@font/source_sans_pro"
                        android:padding="6dp" />

                    <!-- Address -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/details_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_with_border"
                        android:fontFamily="@font/source_sans_pro"
                        android:padding="6dp" />

                    <!-- Gender -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="What gender do you identify as?"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <CheckBox android:id="@+id/checkbox_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prefer not to say"
                        android:onClick="onCheckboxClicked"/>
                    <CheckBox android:id="@+id/checkbox_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:onClick="onCheckboxClicked"/>
                    <CheckBox android:id="@+id/checkbox_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:onClick="onCheckboxClicked"/>
                    <CheckBox android:id="@+id/checkbox_diverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender diverse"
                        android:onClick="onCheckboxClicked"
                        android:layout_marginBottom="30sp"/>

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_details_save"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_wintec_yellow"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:text="Save"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/btn_details_cancel"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/btn_wintec_black"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:onClick="navigateTo"
                            android:text="Cancel"
                            android:textColor="#fff" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>