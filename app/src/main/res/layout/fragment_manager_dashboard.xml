<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.manager.ManagerHomeOptions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/managerBlack">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:gravity="center"
            android:text="Dashboard"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/back_arrow"
            android:onClick="navigateTo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:gravity="right"
            android:layout_marginTop="19dp"
            android:layout_marginRight="20dp"
            android:text="Logout"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Kia Ora!"
        android:textColor="@color/gray"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Let's get started"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/manage_courses"
        app:cardCornerRadius="14dp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:onClick="navigateTo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/ic_manager_courses">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="Manage Courses"
                    android:textAlignment="center"
                    android:textColor="@color/managerBlack"
                    android:textSize="25sp" />
            </LinearLayout>

            <ImageView
                app:tint="#000"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="135dp"
                android:padding="16dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/manage_students"
        app:cardCornerRadius="14dp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:onClick="navigateTo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/ic_manager_student">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="Manage Students"
                    android:textColor="@color/managerBlack"
                    android:textSize="25sp" />
            </LinearLayout>

            <ImageView
                app:tint="#000"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="135dp"
                android:padding="16dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>