<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.student.student_profile.StudentProfile_AboutUs"
    android:background="@color/managerBackgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Details"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/source_sans_pro"
                android:textAlignment="center"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Avatar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Profile Image"
                    android:fontFamily="@font/source_sans_pro"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/details_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/picture_gallagher_student"/>

                <!-- First Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro"/>
                <EditText
                    android:id="@+id/details_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- Last Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro"/>
                <EditText
                    android:id="@+id/details_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro"/>
                <EditText
                    android:id="@+id/details_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- Phone Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro"/>
                <EditText
                    android:id="@+id/details_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro"/>
                <EditText
                    android:id="@+id/details_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_with_border"
                    android:padding="6dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <!-- Pathway -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pathway"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/source_sans_pro"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/radioGroup_pathway"
                    android:layout_marginBottom="30dp">
                    <RadioButton
                        android:id="@+id/radio_network"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network Engineering" />
                    <RadioButton
                        android:id="@+id/radio_software"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Software Engineering" />
                    <RadioButton
                        android:id="@+id/radio_database"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Database Architecture" />
                    <RadioButton
                        android:id="@+id/radio_web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web Development" />
                </RadioGroup>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="40dp">
                    <Button
                        android:id="@+id/btn_details_save"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Save"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_wintec_yellow"
                        android:fontFamily="@font/source_sans_pro"/>
                    <Button
                        android:onClick="jumpTo"
                        android:id="@+id/btn_details_cancel"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="Cancel"
                        android:textColor="#fff"
                        android:background="@drawable/btn_wintec_black"
                        android:fontFamily="@font/source_sans_pro"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>