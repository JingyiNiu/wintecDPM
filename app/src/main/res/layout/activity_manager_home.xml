<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/managerBackgroundColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/source_sans_pro"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kia Ora!"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's get started"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/manage_courses"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="14dp"
        android:onClick="jumpTo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_circle_white"
                    android:src="@drawable/ic_courses"
                    android:padding="16dp"
                    app:tint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:text="Manage Courses"
                    android:fontFamily="@font/source_sans_pro"
                    android:textSize="20sp"
                    android:textColor="@color/lightGray"/>
            </LinearLayout>
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_circle_black_transparent"
                android:src="@drawable/ic_arrow_right"
                android:padding="16dp"
                app:tint="#fff" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/manage_students"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="14dp"
        android:onClick="jumpTo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_circle_white"
                    android:src="@drawable/ic_school"
                    android:padding="16dp"
                    app:tint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:text="Manage Students"
                    android:fontFamily="@font/source_sans_pro"
                    android:textSize="20sp"
                    android:textColor="@color/lightGray"/>
            </LinearLayout>
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_circle_black_transparent"
                android:src="@drawable/ic_arrow_right"
                android:padding="16dp"
                app:tint="#fff" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>