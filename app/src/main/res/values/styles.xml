<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeManager" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/managerBlack</item>
        <item name="colorPrimaryDark">@color/managerBlack</item>
        <item name="colorAccent">@color/managerBlack</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
    </style>

    <style name="BottomNavTablet">
        <item name="android:textSize">0sp</item>
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@color/black</item>
    </style>


</resources>