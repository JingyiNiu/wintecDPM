<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="BottomNavTablet" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="BottomNavTablet.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">26sp</item>
        <item name="android:padding">0dip</item>
    </style>

</resources>